.content
  
  link(rel='stylesheet' href='css/snippets/roundButton.css')
  link(rel='stylesheet' href='css/snippets/flatButton.css')
  script(src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js")
  section
    h1 Round buttons
    .roundButton.samples
      p Simple round buttons with a hover effect.
      a.button(href='#') Round Button
      a.button.inverted(href='#') Inverted Button

    .source
      .sourceBox
        ul.tabNav
          li.active(data-tab-type='css' data-tab-group='roundButton') .css
          li(data-tab-type='scss' data-tab-group='roundButton') .scss
        .tabContent(data-tab-group='roundButton' data-tab-type='css')
          pre
            code.language-css= css.roundButton
        .tabContent.hidden(data-tab-group='roundButton' data-tab-type='scss')
          pre
            code.language-scss= scss.roundButton
              
          
  section
      h1 Flat buttons
      .flatButton.samples
        a.button(href='#') Flat Button
        a.button.inverted(href='#') Inverted Button
      .source
        .sourceBox
          ul.tabNav
            li.active(data-tab-type='css' data-tab-group='flatButton') .css
            li(data-tab-type='scss' data-tab-group='flatButton') .scss
          .tabContent(data-tab-group='flatButton' data-tab-type='css')
            pre
              code.language-css= css.flatButton
          .tabContent.hidden(data-tab-group='flatButton' data-tab-type='scss')
            pre
              code.language-scss= scss.flatButton
            
